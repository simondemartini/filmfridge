<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.uw.tacoma.tcss450.team4.filmfridge.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/AppTheme.SettingsItem"
        android:divider="@color/colorAccent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/useremail_title"
            style="@style/AppTheme.SettingsItemTitle"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/useremail"
            tools:text="email@email.com"
            style="@style/AppTheme.SettingsItemContent" />
    </LinearLayout>

    <View style="@style/Divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/AppTheme.SettingsItem"
        android:divider="@color/colorAccent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ittextview_label"
            android:text="@string/intheaters_string"
            style="@style/AppTheme.SettingsItemTitle" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ittextview"
            tools:text="84/100"
            style="@style/AppTheme.SettingsItemContent" />

    </LinearLayout>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.SettingsItemWideWidget"
        android:id="@+id/itSeekBar"
        android:paddingStart="@dimen/seekbar_padding"
        android:paddingLeft="@dimen/seekbar_padding"
        android:paddingEnd="@dimen/seekbar_padding"
        android:paddingRight="@dimen/seekbar_padding"/>

    <View style="@style/Divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/AppTheme.SettingsItem"
        android:divider="@color/colorAccent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/athome_string"
            style="@style/AppTheme.SettingsItemTitle"
            android:id="@+id/ahtextview_label"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.SettingsItemContent"
            tools:text="72/100"
            android:id="@+id/ahtextview"/>

    </LinearLayout>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.SettingsItemWideWidget"
        android:id="@+id/ahSeekBar"
        android:paddingStart="@dimen/seekbar_padding"
        android:paddingLeft="@dimen/seekbar_padding"
        android:paddingEnd="@dimen/seekbar_padding"
        android:paddingRight="@dimen/seekbar_padding"/>

    <View style="@style/Divider"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/saveprefs_button"
        android:layout_gravity="right"/>

</LinearLayout>
